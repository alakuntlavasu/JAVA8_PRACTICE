		List<Integer>numberList=Arrays.asList(10,20,30,40,50);
		List<Integer>evennumberList=new ArrayList<Integer>();
		
		// without stream
		
		for(int n:numberList) {
			
			if(n%2==0)
			evennumberList.add(n);
			
			
		}
		System.out.println(evennumberList);
