package streamApi_Ex;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;

public class MapEx_And_FilterEx {
	
	int emid;
	String emname;
	int emsal;
	
	
	

	public MapEx_And_FilterEx(int emid, String emname, int emsal) {
		super();
		this.emid = emid;
		this.emname = emname;
		this.emsal = emsal;
	}




	public static void main(String[] args) {
	
		List<MapEx_And_FilterEx> emplist= Arrays.asList(
				new MapEx_And_FilterEx(101,"vasu",38000) );
				new MapEx_And_FilterEx(101,"varun",65000) ;
				new MapEx_And_FilterEx(101,"Rajesh",28000) ;
				new MapEx_And_FilterEx(101,"Naveen",22000) ;
				new MapEx_And_FilterEx(101,"Siva",52000) ;
				new MapEx_And_FilterEx(101,"vamsi",15000) ;
				new MapEx_And_FilterEx(101,"kotireddy",37000) ;
				new MapEx_And_FilterEx(101,"jagadeesh",55000) ;
				new MapEx_And_FilterEx(101,"shafi",25000) ;
				new MapEx_And_FilterEx(101,"Hemanth",35000) ;
				new MapEx_And_FilterEx(101,"pavan",28000) ;
				new MapEx_And_FilterEx(101,"sukumar",34000) ;
				
				
				List<Integer> empsalList= emplist.stream().filter(e->e.emsal<20000)
				                .map(e->e.emsal)
				                .collect(Collectors.toList());
				
				System.out.println(empsalList);
				                
	}

}
